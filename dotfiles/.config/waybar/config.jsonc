      "warning": 25,
      "critical": 10
    },
    "format": "<span font='12'>{icon} </span> {capacity}%",
		"format-charging": "Û∞ÇÑ",
		"format-plugged": "Ôá¶",
		"format-icons": [
			"ÔâÑ",
			"ÔâÉ",
			"ÔâÇ",
			"ÔâÅ",
			"ÔâÄ"
		]  },
  "network": {
    //"interface": "wlan0", // (Optional) To force the use of this interface
    "format": "{bandwidthDownBytes}",
