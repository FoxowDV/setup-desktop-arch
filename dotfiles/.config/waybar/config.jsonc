// -*- mode: jsonc -*-
{
  "layer": "top", 
  "position": "top", 
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [
    "custom/spotify"
  ],
  "modules-right": [
    "pulseaudio",
    "backlight",
    "battery",
    "clock",
    "tray",
	"hyprland/language",
    "network",
	"custom/lock",
	"custom/power"
  ],
  // Modules configuration
  "hyprland/workspaces": {
	"on-click": "activate",
			"on-scroll-up": "hyprctl dispatch workspace e-1",
			"on-scroll-down": "hyprctl dispatch workspace e+1",
			"format": "{icon}",
			"all-outputs": true,
			"format-icons": {
				"1": "ÔÑ†",
				"2": "Û∞ñü",
				"5": "Û∞éâ",
				"default": "ÔÑ†"
			}
  },
	"custom/spotify": {
		"exec": "/usr/bin/python3 /home/wallace/.config/waybar/mediaplayer.py --player spotify",
		"format": "ÔÜº {}",
		"return-type": "json",
		"on-click": "playerctl play-pause",
		"on-scroll-up": "playerctl next",
		"on-scroll-down": "playerctl previous"
	},
  "tray": {
    "icon-size": 21,
    "spacing": 10
    ,"show-passive-items":true
  },
  "clock": {
    // "timezone": "America/New_York",
	"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
	"format-alt": "ÔÅ≥  {:%d/%m/%Y}",
